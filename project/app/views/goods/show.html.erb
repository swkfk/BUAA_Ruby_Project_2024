<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="offset-2 col-8">
    <%= render @good %>
  </div>
</div>

<hr />

<div class="row">
  <div class="offset-2 col-8">
  
    <div class="row mt-3">
      <div class="border-bottom border-secondary fw-bolder">修改商品</div>
    </div>

    <div class="row mt-3">
      <%= link_to "编辑商品信息", edit_good_path(@good), class: "col-3 btn btn-primary" %>
      <%= link_to "返回商品总览", goods_path, class: "offset-1 col-4 btn btn-primary" %>
      <%= link_to "编辑商品属性", edit_good_attribute_goods_path(:id => @good.id), class: "offset-1 col-3 btn btn-primary" %>
    </div>
    <div class="row mt-3">
      <div class="border-bottom border-secondary fw-bolder">危险操作</div>
    </div>
    <div class="row mt-3">
      <%= button_to "删除商品", @good, method: :delete, class: "offset-4 col-4 btn btn-danger" %>
    </div>
  </div>
</div>
