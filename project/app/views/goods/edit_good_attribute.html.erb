<div>
  <h2>Edit Good Attribute</h2>

  <div>
    <h3>Good Name: <%= @good.name %></h3>
  </div>

  <%= form_with url: do_edit_good_attribute_goods_path(:id => 1) do |form| %>

  <div>
    Good Tags:
    <%= form.collection_check_boxes :attr_tag_ids, @tags, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box(checked: @checked_tags.include?(b.object.id)) %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <hr />

  <div>
    Good Colors:
    <%= form.collection_check_boxes :attr_color_ids, @colors, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box(checked: @checked_colors.include?(b.object.id)) %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <%= form.submit "Save Attribute" %>

  <% end %>

</div>