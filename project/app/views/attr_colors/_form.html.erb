<%= form_with(model: attr_color) do |form| %>
  <% if attr_color.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attr_color.errors.count, "error") %> prohibited this attr_color from being saved:</h2>

      <ul>
        <% attr_color.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :rgb, style: "display: block" %>
    <%= form.color_field :rgb,
        id: "rgb_field",
        onchange: "document.getElementById('rgb_hex').value = this.value",
        style: "width: 100px; height: 50px;" %>
    <%= form.text_field :rgb, 
        id: "rgb_hex",
        value: "#000000",
        readonly: true,
        style: "margin-left: 10px;" %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
