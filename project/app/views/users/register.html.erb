<h1>注册新用户</h1>
<div style="color: red"><%= alert %></div>

<%= form_with url: do_register_users_path do %>
  <p>
    用户名：<%= text_field_tag :username %>
  </p>

  <p>
    密码：<%= password_field_tag :password %>
  </p>

  <p>
    确认密码：<%= password_field_tag :re_password %>
  </p>

  <p>
    邮箱：<%= text_field_tag :email %>
  </p>

  <p>
    用户类型：<%= select_tag :user_type, options_for_select([%w[用户 Customer], %w[商户 Merchant]]) %>
  </p>

  <%= submit_tag '注册' %>
<% end %>
