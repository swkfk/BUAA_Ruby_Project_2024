<p style="color: green"><%= notice %></p>

<%= link_to "<< Go Back", blogs_path %>
<br />
<br />

<%= render @blog %>

<div>

  <h2>Comments</h2>
  <div id="comments">
    <%= render @blog.comments.reverse %>
  </div>

  <hr />

  <%= form_with model: [@blog, Comment.new] do |f| %>
    <p>
      <%= f.label :content, "New Comment" %> <br />
      <%= f.text_area :content, :rows => 5 %>
    </p>
    <p>
      <% if current_user.nil? %>
        <span style="color: gray">Please Login!</span>
      <% else %>
        <%= f.submit "Add Comment" %>
      <% end %>
    </p>
  <% end %>
</div>
