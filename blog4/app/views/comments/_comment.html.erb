  <p style="color: gray; margin-left: 8px">
    <strong>Posted</strong>
    <%= time_ago_in_words comment.created_at %>
    <strong>ago</strong>
    |
    <span style="font-weight: bold">From <%= comment.user.username %></span>
  </p>

  <pre>
    <%= comment.content %>
  </pre>

</div>
